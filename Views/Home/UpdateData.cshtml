@model Code_First_Approach.Models.Employee
@{
    ViewData["Title"] = "UpdateData";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>UpdateData</h1>


<form asp-controller="Home" asp-action="UpdateData" method="post">
    <input asp-for="Id" type="hidden" />
    <input type="hidden" name="id" value="@Model.Id" />
    <label>Name</label>
    <input type="text" id="Name" name="Name" value="@Model.Name" />
    <span asp-validation-for="Name"></span>
    <label>Age</label>
    <input type="text" id="Age" name="Age" value="@Model.Age" />
    <label>Email</label>
    <input type="text" id="Email" name="Email" value="@Model.Email" />
    <label>Password</label>
    <input type="text" id="Password" name="Password" value="@Model.Password" />
    <input type="submit" name="UpdateData" />


</form>

